{
  "compilerOptions": {
    "module": "commonjs",     //как будут генерироваться модули
    "noImplicitAny": true,    //нельзя использовать тип any
    "removeComments": true,   //удалить комментарии в скомпилированном файле
    "sourceMap": true,        //создать map файлы для отладки
    "outDir": "dist"          //указать директорию для компилируемых файлов
  },
  "include": [
    "**/*"                    //компилировать все файлы во всех директориях
  ],
  "exclude": [
    "node_modules",           //не компилировать содержимое в node_modulet
    "**/*.spec.ts"            //не компилировать файлы с расширением .spes.ts
  ]
}

